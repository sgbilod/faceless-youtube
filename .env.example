# ===========================
# FACELESS YOUTUBE AUTOMATION
# Environment Variables Template
# ===========================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ===========================
# APPLICATION
# ===========================
APP_NAME=Faceless YouTube Automation
APP_VERSION=2.0.0
DEBUG=false
SECRET_KEY=CHANGE_THIS_TO_SECURE_RANDOM_STRING

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Frontend
FRONTEND_PORT=3000

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Performance
MAX_CONCURRENT_JOBS=2
CACHE_TTL=3600

# ===========================
# DATABASE - PostgreSQL
# ===========================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=faceless_youtube
DB_USER=postgres
DB_PASSWORD=your_password_here

# ===========================
# REDIS - Cache & Queue
# ===========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ===========================
# DATABASE - MongoDB
# ===========================
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=faceless_youtube

# ===========================
# AI/ML SERVICES
# ===========================

# Ollama (Local LLM) - FREE  
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_MODEL=mistral

# OpenAI (Fallback/Premium) - PAID (Optional)
OPENAI_API_KEY=  # sk-... (Leave empty to skip)

# ElevenLabs (Premium Voice) - PAID (Optional)
ELEVENLABS_API_KEY=  # Leave empty to use free alternatives

# ===========================
# YOUTUBE API
# ===========================
YOUTUBE_CLIENT_SECRETS=client_secrets.json  # Path to OAuth credentials

# ===========================
# ASSET SOURCES (All FREE)
# ===========================

# Pexels
PEXELS_API_KEY=  # Get free key: https://www.pexels.com/api/

# Pixabay
PIXABAY_API_KEY=  # Get free key: https://pixabay.com/api/docs/
NASA_API_KEY=DEMO_KEY  # Use DEMO_KEY or get free key: https://api.nasa.gov/

# ===========================
# ASSET SCRAPER APIs
# ===========================

# Pexels (Free stock videos and photos)
# Get your API key: https://www.pexels.com/api/
PEXELS_API_KEY=

# Pixabay (Free stock videos, photos, and music)
# Get your API key: https://pixabay.com/api/docs/
PIXABAY_API_KEY=

# Unsplash (Free stock photos - requires attribution)
# Get your Access Key: https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=

# Scraper Configuration
ASSET_SCRAPER_CACHE_ENABLED=true
ASSET_SCRAPER_CACHE_TTL=3600  # 1 hour
ASSET_SCRAPER_MAX_RETRIES=3
ASSET_SCRAPER_REQUEST_TIMEOUT=30

# Proxy Configuration (Optional)
ASSET_SCRAPER_PROXY_URL=
ASSET_SCRAPER_PROXY_USERNAME=
ASSET_SCRAPER_PROXY_PASSWORD=

# ===========================
# PLATFORM APIs
# ===========================

# YouTube Data API v3
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_API_KEY=  # Get from: https://console.cloud.google.com/

# YouTube OAuth Token (auto-generated after first auth)
YOUTUBE_ACCESS_TOKEN=
YOUTUBE_REFRESH_TOKEN=

# TikTok (Unofficial - requires custom implementation)
TIKTOK_USERNAME=
TIKTOK_PASSWORD=  # Store encrypted, never plain text
TIKTOK_SESSION_ID=

# Instagram (Requires Facebook Business API)
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_BUSINESS_ACCOUNT_ID=

# LinkedIn
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_ACCESS_TOKEN=

# Twitter (X)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# ===========================
# MONITORING & ANALYTICS
# ===========================

# Sentry (Error Tracking) - Optional
SENTRY_DSN=  # https://sentry.io

# Prometheus (Metrics) - Optional
PROMETHEUS_PORT=9090

# ===========================
# STORAGE
# ===========================

# Local Storage Paths
ASSETS_PATH=./assets
OUTPUT_PATH=./output_videos
TEMP_PATH=./temp
CACHE_PATH=./cache

# AWS S3 (Optional - for cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# ===========================
# SECURITY
# ===========================

# Encryption Key (Generate: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=

# JWT Secret (Generate: openssl rand -hex 32)
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ===========================
# FEATURE FLAGS
# ===========================

# Enable/Disable Features
ENABLE_AI_SCRIPT_GENERATION=true
ENABLE_MULTI_PLATFORM_PUBLISHING=false  # Set to true when ready
ENABLE_ANALYTICS=true
ENABLE_AFFILIATE_LINKS=false  # Set to true after revenue validation
ENABLE_AB_TESTING=false

# ===========================
# ADVANCED SETTINGS
# ===========================

# Video Rendering
VIDEO_RESOLUTION=1080p  # 1080p, 720p, 480p
VIDEO_FPS=30
VIDEO_CODEC=libx264
VIDEO_QUALITY=high  # high, medium, low

# Asset Scraping
SCRAPER_CONCURRENT_REQUESTS=5
SCRAPER_REQUEST_TIMEOUT=30
SCRAPER_RETRY_ATTEMPTS=3
SCRAPER_SCHEDULE_FREQUENCY=weekly  # daily, weekly, monthly

# Performance Tuning
MAX_WORKERS=4
REQUEST_TIMEOUT=60
UPLOAD_MAX_SIZE_MB=500

# ===========================
# DEVELOPMENT ONLY
# ===========================

# Hot Reload (Development)
DEV_RELOAD=true

# Mock APIs (Testing without real API calls)
MOCK_OPENAI=false
MOCK_YOUTUBE=false
MOCK_PEXELS=false

# Verbose Logging
VERBOSE_LOGGING=false
SQL_ECHO=false  # Echo SQL queries to console

# ===========================
# NOTES
# ===========================

# 1. FREE API Keys:
#    - Pexels: https://www.pexels.com/api/
#    - Pixabay: https://pixabay.com/api/docs/
#    - Unsplash: https://unsplash.com/developers
#    - NASA: https://api.nasa.gov/ (Use DEMO_KEY for testing)

# 2. Paid APIs (Optional):
#    - OpenAI: https://platform.openai.com/api-keys
